@import  "../asset/commonstyle/iconfont.wxss";
view{
  display:block;
}
image{
  display:inline-block;
}
.title{
  display:flex;
  flex-direction: row;
  text-align:center;
}
.title{
  padding:0 30rpx;
  font-size:38rpx;
  font-weight:bold;
  margin-bottom:10rpx;
}
.line{
  background:linear-gradient(
	transparent 49%,
	#ccc 49%, 
	#ccc 51%, 
	transparent 51%);
	flex:1;
}
/*钢结构屋面开始  */
.flex-wrap{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  padding:0 20rpx;
  margin-bottom:20rpx;
}
.flex-item{
   flex:1;
   height:240rpx;
   margin:0 10rpx 0 10rpx;
}
.flex-item image{
  width:212rpx;
  height:240rpx;
}
/*钢结构屋面结束  */
.page-seecting-spacing{
  padding:0 30rpx;
  box-sizingL:border-box;
}
.scroll-view-h{
  white-space: nowrap;
  width:100%;
  display:flex;
  justify-content: space-between;
}
.scroll-view-item{
  width:100%;
  height:300rpx;
  display:inline-block;
}
.scroll-view-item image{
   width:100%;
   height:350rpx;
   display:inline-block;
}
.scroll-view-height{
  height:350rpx;
}
.scroll-view-item{
  height:350rpx;
}

